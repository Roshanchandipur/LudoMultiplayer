<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_ludo"
    android:padding="@dimen/layout_padding"
    tools:context=".ui.game.ludo.ui.ChooseColorActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_margin="40dp"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@drawable/app_icon"/>

    <TextView
        style="@style/tv_header"
        android:text="Choose Token"
        android:layout_margin="20dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/player1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/g_yellow"
            android:layout_height="@dimen/choose_token_color"/>
        <ImageView
            android:id="@+id/player2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/g_blue"
            android:layout_height="@dimen/choose_token_color"/>
        <ImageView
            android:id="@+id/player3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/g_red"
            android:layout_height="@dimen/choose_token_color"/>
        <ImageView
            android:id="@+id/player4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/g_green"
            android:layout_height="@dimen/choose_token_color"/>
    </LinearLayout>
</LinearLayout>